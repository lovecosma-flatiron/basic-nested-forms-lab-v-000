<h1>Create Recipe</h1>


<%= form_for @recipe do |f| %>

  <p>Title: <%= f.text_field :title %></p>
    <%= f.fields_for :ingredients do |addr| %>
    <%= addr.label :name %>
    <%= addr.text_field :name %><br>
 
    <%= addr.label :quantity %>
    <%= addr.text_field :quantity %><br>
 
  <% end %>
 

  <%= f.submit %>
<% end %>
